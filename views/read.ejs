<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MiniProject</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white p-10">
    
    <a class="text-white mb-6 inline-block" href="/">Back to Home</a>
    <h1 class="text-3xl font-semibold tracking-tight mb-6">All Users</h1>

    <% if (users.length > 0) { %>
      <div class="users flex flex-wrap gap-6">
        <% users.forEach(user => { %>
          <!-- User Card -->
          <div class="user max-w-sm bg-zinc-800 rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
            <!-- User Image -->
            <div class="w-40 h-50 bg-zinc-700 flex items-center justify-center">
              <img src="<%= user.imageurl %>" alt="User Image" class="w-full h-full object-cover">
            </div>

            <!-- User Info -->
            <div class="p-5">
              <h3 class="text-xl font-medium tracking-tight"><%= user.name %></h3>
              <h5 class="text-gray-400 text-sm mb-4"><%= user.email %></h5>

              <!-- Actions -->
              <div class="flex gap-4">
                <a href="/edit/<%=user._id%>" class="text-blue-500 hover:underline">Edit User</a>
                <a href="/delete/<%= user._id %>" onclick="return confirm('Are you sure you want to delete this user?');" class="text-red-500 hover:underline">Delete User</a>
              </div>
            </div>
          </div>
          <!-- End User Card -->
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-gray-400">No users found. <a href="/" class="text-blue-400 underline">Create one</a>.</p>
    <% } %>

  </body>
</html>
